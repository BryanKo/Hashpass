<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.testing.barCurrent">

    <TextView
        android:id="@+id/tvBarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBarLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="@+id/tvBarName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBarRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        app:layout_constraintStart_toStartOf="@+id/tvBarLoc"
        app:layout_constraintTop_toBottomOf="@+id/tvBarLoc" />

    <TextView
        android:id="@+id/tvBarPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        app:layout_constraintStart_toStartOf="@+id/tvBarRating"
        app:layout_constraintTop_toBottomOf="@+id/tvBarRating" />

    <TextView
        android:id="@+id/tvBarDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        app:layout_constraintStart_toStartOf="@+id/tvBarPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvBarPrice" />

</android.support.constraint.ConstraintLayout>
